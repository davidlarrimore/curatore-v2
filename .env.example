# .env.example - Updated for Curatore v2

# API Configuration
DEBUG=false
CORS_ORIGINS=["http://localhost:3000"]

# OpenAI/LLM Configuration
OPENAI_API_KEY=sk-your-api-key-here
OPENAI_MODEL=gpt-4o-mini
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_VERIFY_SSL=true
OPENAI_TIMEOUT=60
OPENAI_MAX_RETRIES=3

# OCR Configuration
OCR_LANG=eng
OCR_PSM=3

# File Storage Configuration
UPLOAD_DIR=uploads
PROCESSED_DIR=processed
MAX_FILE_SIZE=52428800

# Default Quality Thresholds
DEFAULT_CONVERSION_THRESHOLD=70
DEFAULT_CLARITY_THRESHOLD=7
DEFAULT_COMPLETENESS_THRESHOLD=7
DEFAULT_RELEVANCE_THRESHOLD=7
DEFAULT_MARKDOWN_THRESHOLD=7

# Alternative LLM Endpoints (examples)
# For OpenWebUI:
# OPENAI_BASE_URL=http://localhost:3000/v1
# OPENAI_API_KEY=your-openwebui-api-key

# For Ollama:
# OPENAI_BASE_URL=http://localhost:11434/v1
# OPENAI_API_KEY=ollama

# For LM Studio:
# OPENAI_BASE_URL=http://localhost:1234/v1
# OPENAI_API_KEY=lm-studio

# For local development without SSL:
# OPENAI_VERIFY_SSL=false